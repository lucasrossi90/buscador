
  <div class="container">  
  <%= form_tag(articulos_path, :method => "get", id: "search-form") do %>
    <div class="row">
      <div class="col-md-5">
              <%= text_field_tag :search, params[:search], placeholder: 'Ingrese CÓDIGO o DESCRIPCIÓN', size:60, 
              class: "form-control typeahead" %>       
      </div>
      <div class="col-md-3">
            <%= select_tag :orden, options_for_select([[ "Ordenado por CÓDIGO" , "codigo" ], ["Ordenado por DESCRIPCIÓN" , "descripcion" ]], ["codigo"]), class: 'form-control' %>
      </div>  
      <div class="col-md-4">
             <%= select_tag :proveedor, options_from_collection_for_select(@proveedores, :id, :nombre), include_blank: 'Seleccionar PROVEEDOR...', class: 'form-control' %>
      </div>
    </div>
	<% end %>
  </div>

  <%= render partial: 'articulostype' %>
  
  <table class="table table-striped">
    <tr>
      <th>Codigo</th>
      <th>Descripcion</th>
      <th>Precio</th>
      <th>Precio c/desc.</th>
      <th>Precio +21%</th>
      <th>Lista</th>
      <th>Descuento</th>
      <th>Rubro</th>
      <th>Fecha precio</th>
    </tr>
    <tbody id="resultado">
    </tbody>
  </table>

<div id="botones_paginacion" class="btn-group" role="group" aria-label="button_paginacion">
  <button id="button_anterior" type="button" class="btn btn-success">Anterior</button>
  <button id="button_siguiente" type="button" class="btn btn-success">Siguiente</button>
</div>

<script>
  <%= @pagina_actual %>
</script>