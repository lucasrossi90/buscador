<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<%= form_tag(articulos_path, :method => "get", id: "search-form") do %>
    <div class="row">
      <div class="col-sm-4">
        <%= text_field_tag :search, params[:search] %>
      </div>  
      <div class="col-sm-4">
	     <%= select_tag :proveedor, options_from_collection_for_select(@proveedores, :id, :nombre), include_blank: 'Seleccionar...', class: 'form-control' %>
      </div>  
    </div>

	<% end %>

  <div id="resultado"></div>

  <script type="text/javascript">
    function actualizarResultados() {
      $.get('/articulos/resultado_articulos', { search: $('#search').val() })
      .success(function(response){
        $('#resultado').html(response);
      });
    }
    actualizarResultados();
    $('#search').keyup(function() {
      actualizarResultados();
    });
    $('#proveedor').change(function() {
      actualizarResultados();
    });
  </script>


</body>
</html>

