<tr>
	<td>
		<%= articulo.codigo %>
	</td>
	<td>
		<%= articulo.descripcion %>
	</td>
	<td>
		<%= articulo.precio %>
	</td>
	<td>
		<%= articulo.precio - ((articulo.precio * articulo.descuento)/100) %>
	</td>
	<td>
		<%= ((articulo.precio - ((articulo.precio * articulo.descuento)/100)) * 1.21) %>
	</td>
	<td>
		<%= articulo.listum.nombre %>
	</td>
	<td>
		<%= articulo.descuento %>
	</td>
	<td>
		<%= articulo.rubro %>
	</td>
	<td>
		<%= articulo.listum.fecha_precio.strftime('%Y/%m') %>
	</td>
</tr>

