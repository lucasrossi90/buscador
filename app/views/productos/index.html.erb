<%= javascript_include_tag 'productos' %>

  <div class="container">  
  <%= form_tag(productos_path, :method => "get", id: "search-form") do %>
    <div class="row">
      <div class="col-md-5">
              <%= text_field_tag :interno, params[:interno], placeholder: 'Ingrese CÓDIGO INTERNO', size:60, 
              class: "form-control typeahead" %>       
      </div>
      <div class="col-md-5">
              <%= text_field_tag :codigodesc, params[:codigodesc], placeholder: 'Ingrese CÓDIGO o DESCRIPCIÓN', size:60, 
              class: "form-control typeahead" %>       
      </div>
      <div class="col-md-3">
            <%= select_tag :orden, options_for_select([["Ordenado por CÓDIGO ORIGINAL" , "codigo_original" ], ["Ordenado por DESCRIPCIÓN" , "descripcion" ]]), 
            class: 'form-control typeahead' %>
      </div>  
      <div class="col-md-4">
             <%= select_tag :rubro, options_from_collection_for_select(@rubros, :id, :nombre), include_blank: 'Seleccionar RUBRO...', 
             class: 'form-control typeahead' %>
      </div>
    </div>
	<% end %>
  </div>

  <%= render partial: 'productostype' %>
  
  <table class="table table-striped">
    <tr>
      <th>Interno</th>
      <th>Original</th>
      <th>Descripcion</th>
      <th>Rubro</th>
      <th>Ubicación</th>
    </tr>
    <tbody id="resultado">
    </tbody>
  </table>